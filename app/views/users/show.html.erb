<p id="notice"><%= notice %></p>

<h2><%= @user.username %>'s profile</h2>

<b><u>Account information</u></b><br>
<b>Username:</b> <%= @user.username %><br>
<b>Total score:</b> <%= @user.score %><br>
<b>Recent goals:</b><br>
<% @user.user_goals.sort_by{|ug| ug.created_at }.reverse.take(5).each do |user_goal| %>
  <%= user_goal.goal.name %>, <%= user_goal.created_at.strftime("%d %b. %Y") %>
  <% if current_user %>
    <%= link_to 'remove', user_goal, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %> (<%= user_goal.goal.score %> points)<br>
<% end %>
<br><br>

<% if current_user == @user %>
  <%= link_to 'Change password', edit_user_path(@user), class: 'button alert' %>
  <%= link_to 'Destroy this account', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'button warning' %>
<% end %>
